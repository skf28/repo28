server {
       listen {{ http_port }} ssl default_server;
       server_name _;
        ssl_certificate /etc/letsencrypt/live/www.{{ http_host }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/www.{{ http_host }}/privkey.pem;
       location / {
               proxy_pass https://{{ proxy_http_host }}:{{ proxy_http_port }};
               proxy_set_header Host $host;
               proxy_set_header X-Real-IP $remote_addr;
               proxy_set_header X-Forwarded-Host $host;
               proxy_set_header X-Forwarded-Server $host;
               proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
               proxy_set_header X-Forwarded-Proto $scheme;
               proxy_set_header X-Server-Address  $server_addr;
       }
}

